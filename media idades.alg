algoritmo "media idades"

var
     nome1, nome2: caractere
     idade1, idade2: inteiro
     idadeMedia: real
inicio

escreva ("nome1:" )
leia (nome1)
escreva ("nome2:" )
leia (nome2)
escreva ("idade1:" )
leia (idade1)
escreva ("idade2:" )
leia (idade2)
idadeMedia <- (idade1+idade2) / 2
escreval ("A idade Media de ", nome1, " e " ,nome2, " e de " , idadeMedia:4:2 , " anos. " )

fimalgoritmo
